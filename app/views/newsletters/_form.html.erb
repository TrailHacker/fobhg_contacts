<%= simple_form_for(@newsletter) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :subject %>
    <%= f.input :body, :as => :text, :input_html => { :rows => 20 } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-success" %>
  </div>
<% end %>
